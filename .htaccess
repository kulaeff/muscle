RewriteEngine on
RewriteRule ^api/credentials$ $0.php [L]
RewriteRule ^api/database$ $0.php [L]
RewriteRule ^api/server$ /$0.php [L]
RewriteRule ^api/status/summary$ /$0.php [L]
RewriteRule ^server$ /$1 [L]
RewriteRule ^server/\w+$ /$1 [L]
RewriteRule ^server/\w+/\w+$ /$1 [L]
RewriteRule ^status$ /$1 [L]
RewriteRule ^status/\w+$ /$1 [L]
RewriteRule ^settings$ /$1 [L]